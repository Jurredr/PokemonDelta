{
    "name": "pokemon_delta",
    "description": "",
    "version": "1.0.0",
    "repository": "https://github.com/Jurredr/PokemonDelta.git",
    "scripts": {
        "lint": "eslint --ignore-path .gitignore .",
        "lint-fix": "eslint --ignore-path .gitignore --ignore-path .eslintignore . --fix",
        "public:build": "parcel build **/*.html --out-dir dist/public",
        "public:watch": "parcel watch **/*.html --out-dir dist/public",
        "server:build": "babel server -d dist/server",
        "server:watch": "nodemon --exec babel-node server/index.js",
        "watch": "concurrently \"yarn run public:watch\" \"yarn run server:watch\"",
        "build": "yarn run public:build && yarn run server:build",
        "start": "node dist/server/index.js"
    },
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.11.6",
        "@babel/core": "^7.11.6",
        "@babel/node": "^7.10.5",
        "@babel/preset-env": "^7.11.5",
        "babel-eslint": "^10.1.0",
        "concurrently": "^5.3.0",
        "eslint": "^7.10.0",
        "eslint-plugin-prettier": "^3.1.4",
        "nodemon": "^2.0.4",
        "p5": "^1.1.9",
        "parcel-bundler": "^1.12.4",
        "prettier": "^2.1.2",
        "sass": "^1.26.12"
    },
    "dependencies": {
        "dotenv": "^8.2.0",
        "express": "^4.17.1"
    }
}
